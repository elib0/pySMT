@import 'jeet/framework'
@import 'jeet/goodies'

max-center = 1000px

color-base = #3B5998

footer
	margin: 1em 0 0 0;

label
	min-width: 5.5em
	display: inline-block

.system-message
	background-color: color-base
	border-bottom: solid 1px hsl(221, 44%, 20%)
	box-shadow: 0 1px 2px hsl(221, 44%, 60%)
	height 2em
	padding 0.5em
	color: #FFF

.welcome-message span
	font-weight: bold

.welcome-message span
	a, a:hover, a:visited, a:active
		color: #FFF
		font-weight bold

.content
	center(max-center)
	border 1px solid #CCC
	border-top none
	min-height: 500px
	h1
		text-align: center

.home
	h3
		text-align: center


.poll-result
	ul
		list-style: none
		li
			width 30%
			span
				display block
		li span.bar1
			background-color: #0080FF
		li span.bar2
			background-color: #FF0080
		li span.bar3
			background-color: #00FF00
		li span.bar4
			background-color: #FF8000

.profile
	aside,article
		col(1,2)
	aside
		border-left: 1px solid #CCC
		hr
			border: 1px solid #CCC
			border-bottom none
		h6
			margin 0 1em

.external-profile
	article
		col(1,3)

footer
	center(max-center)
	a
		btn(color-base)
		font-weight: bold
		color: #FFF
		padding: 5px 20px


